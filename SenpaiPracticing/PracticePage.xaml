            <AppBarButton x:Name="SettingsButton" AccessKey="F1"     Command="{Binding GoToSettingsCommand}" Icon="Setting" Label="Einstellungen"   ToolTipService.ToolTip="F1"/>
            
            <AppBarSeparator/>

            <AppBarButton x:Name="EditButton"     AccessKey="F2"     Command="{Binding EditWordCommand}"     Icon="Edit"    Label="Wort bearbeiten" ToolTipService.ToolTip="F2"/>
            <AppBarButton x:Name="CancelButton"   AccessKey="Escape" Command="{Binding CancelEditCommand}"   Icon="Cancel"  Label="Abbrechen"       ToolTipService.ToolTip="Escape" Visibility="{Binding EditViewVisibility}"/>

            <AppBarSeparator/>
            
            <AppBarButton x:Name="QuitButton"     AccessKey="Escape" Command="{Binding QuitPracticeCommand}" Icon="Back"    Label="Beenden"         ToolTipService.ToolTip="Escape"/>

